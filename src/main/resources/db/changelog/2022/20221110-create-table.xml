<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-notification" author="Artem-Sokolov">
        <createTable tableName="notification">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="send_date" type="timestamp">
            </column>
            <column name="status" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="text">
            </column>
            <column name="attempts" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="parts" type="text">
            </column>
            <column name="planned_date" type="timestamp">
            </column>
            <column name="service_name" type="varchar(100)">
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>